<toolchaindefinition xmlns="http://www.netbeans.org/ns/cnd-toolchain-definition/1">
    <scanner id="GNU">
        <error pattern="^([a-zA-Z]:[^:$]*|[^:$]*):([0-9]+)[\.:]([^:$]*):([^$]*)" severity="error" language="c,cpp,fortran,assembler"/>
        <error pattern="^([a-zA-Z]:[^:$]*|[^:$]*):([0-9]+):$" severity="error" language="fortran"/>
        <error pattern="^([^:$]*):([0-9]+): ([a-zA-Z]*):(.*)" severity="error" language="c,cpp,fortran,assembler"/>
	<!-- Intel -->
        <error pattern="^([^\($]*)\(([0-9]+)\): ([^:$]*): ([^$]*)" severity="error" language="c,cpp,fortran,assembler"/>
	<!-- MSVC -->
        <error pattern="^([^\($]*)\(([0-9]+)\) : ([^:$]*):([^$]*)" severity="error" language="c,cpp,fortran,assembler"/>
	<!-- Pro*C/C++ -->
        <error pattern="(.*) at line ([0-9]+), column ([0-9]+), file (.*\.pc):([^$]*)" severity="error" language="c,cpp,fortran,assembler"/>   
	<!-- ARM -->
        <error pattern="^&quot;(.*?)&quot;, line *([0-9]+): (\w*): ([^$]*)" severity="error" language="c,cpp,fortran,assembler"/>
        <enter_directory pattern=".*make(?:\.exe)?(?:\[([0-9]+)\])?: Entering[\w+\s+]+[`|']([^']*)'"/>
        <leave_directory pattern=".*make(?:\.exe)?(?:\[([0-9]+)\])?: Leaving[\w+\s+]+[`|']([^']*)'"/>
        <change_directory pattern="cd\s+((&quot;[^&quot;]*&quot;|'[^']*'|\.|[^\s;&amp;])+)"/>
        <making_all_in_directory pattern="Making all in (.*)"/>
        <stack_header pattern="^In file included from ([A-Z]:[^:$]*|[^:$]*):([^:^,]*)"/>
        <stack_header pattern="^([a-zA-Z]:[^:$]*|[^:$]*): In instantiation of"/>
        <stack_next pattern="^                 from ([A-Z]:[^:$]*|[^:$]*):([^:^,]*)"/>
        <stack_next pattern="^([a-zA-Z]:[^:$]*|[^:$]*):([0-9]+):[0-9]*[:]*   instantiated from.*"/>
        <stack_next pattern="^([a-zA-Z]:[^:$]*|[^:$]*):([0-9]+):[0-9]*[:]*   required from.*"/>
    </scanner>
</toolchaindefinition>



