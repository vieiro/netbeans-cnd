<toolchaindefinition xmlns="http://www.netbeans.org/ns/cnd-toolchain-definition/1">
    <c>
        <compiler name="cc"/>
        <recognizer pattern=".*solarisstudio.*/bin" or_exist_folder="../LEGAL"/>
        <version flags="-V" fingerprint_flags="-Wd,-xide" fingerprint_pattern="#\s*__tool_build_number\s*(\w*)"/>
        <system_include_paths parser="Fingerprint"/>
        <important_flags flags="-O(\W|$|-)|-O0|-O1|-O2|-O3|-O4|-O5|-Xa|-Xc|-Xs|-Xt|-ansi|-fast|-fnonstd|-fns(\W|$|-)|-fns=.*|-fopenmp|-fprecision=.*|-m64|-mt(\W|$|-)|-mt=.*|-native|-pedantic(\W|$|-)|-pedantic=.*|-preserve_argvalues=.*|-std=.*|-xarch=.*|-xO1|-xO2|-xO3|-xO4|-xO5|-xautopar|-xc($|\+\+$)|-xc99(\W|$|-)|-xc99=.*|-xchar=.*|-xlang=.*|-xmaxopt=.*|-xopenmp(\W|$|-)|-xopenmp=.*|-xprefetch=.*|-xprofile=.*|-xtransition"/>
        <system_macros parser="Fingerprint">
            <macro hide="true" stringvalue="__LINE__"/>
            <macro hide="true" stringvalue="__FILE__"/>
            <macro hide="true" stringvalue="__DATE__"/>
            <macro hide="true" stringvalue="__TIME__"/>
        </system_macros>
        <user_include flags="-I"/>
        <user_file flags="-include "/>
        <user_macro flags="-D"/>
        <development_mode>
            <fast_build flags=""/>
            <debug default="true" flags="-g"/>
            <performance_debug flags="-g -xO2"/>
            <test_coverage flags="-xprofile=tcov -xinline="/>
            <diagnosable_release flags="-g -O"/>
            <release flags="-fast -g"/>
            <performance_release flags="-fast -xipo -g"/>
        </development_mode>
        <warning_level>
            <no_warnings flags="-w"/>
            <default default="true" flags=""/>
            <more_warnings flags="+w"/>
            <warning2error flags="-errwarn=%all"/>
        </warning_level>
        <architecture>
            <default default="true" flags=""/>
            <bits_32 flags="-m32"/>
            <bits_64 flags="-m64"/>
        </architecture>
        <strip flags="-s"/>
        <multithreading>
            <none flags=""/>
            <safe flags="-mt"/>
            <automatic default="true" flags="-xautopar -xvector -xreduction -xloopinfo -O3"/>
            <open_mp flags="-xopenmp -O3"/>
        </multithreading>
        <standard>
            <old flags="-xc99=none"/>
            <legacy flags="-xc99=none"/>
            <default default="true" flags=""/>
            <modern flags="-xstrconst -xc99"/>
        </standard>
        <language_extension>
            <none flags="-Xc"/>
            <default default="true" flags=""/>
            <all flags=""/>
        </language_extension>
        <c_standard>
            <default flags="" default="true"/>
            <c89 flags="-std=c89"/>
            <c99 flags="-std=c99"/>
            <c11 flags="-std=c11"/>
        </c_standard>
        <output_object_file flags="-o "/>
    </c>
</toolchaindefinition>
